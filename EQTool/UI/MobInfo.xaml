<local:BaseSaveStateWindow x:Class="EQTool.UI.MobInfo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
        xmlns:local="clr-namespace:EQTool.UI"
        Style="{StaticResource MyMobWindowSyle}"
        Title="{Binding Title}" 
        Height="350" 
        Width="700"  
        WindowStyle="None"
        ResizeMode="{Binding CanResize}"
        AllowsTransparency="True">

    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="0" ResizeBorderThickness="5" />
    </WindowChrome.WindowChrome>
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <Style TargetType="ListViewItem">
            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
        </Style>
        <LinearGradientBrush x:Key="WindowFrameBrush" StartPoint="0,0.5" EndPoint="1,0.5">
            <GradientStop Color="CadetBlue" Offset="0.4"/>
            <GradientStop Color="Gray" Offset="1"/>
        </LinearGradientBrush>
    </Window.Resources>
    <Border Background="#1a1919" CornerRadius="5" BorderBrush="{StaticResource WindowFrameBrush}" BorderThickness="{Binding BorderThickness}">
        <Grid Name="OutermostContainer">
            <Border Panel.ZIndex="1" Height="20" Background="Transparent" HorizontalAlignment="Stretch" VerticalAlignment="Top" IsHitTestVisible="{Binding IsTitleBarHidden}"
                    Visibility="{Binding IsLocked, Converter={StaticResource BooleanToVisibilityConverter}}" MouseEnter="HoverZone_MouseEnter" MouseLeave="HoverZone_MouseLeave" />
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition/>
                </Grid.RowDefinitions>
                    <Border Grid.Row="0" Panel.ZIndex="2" Height="{Binding TitleBarHeight}" Background="{StaticResource WindowFrameBrush}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" CornerRadius="5,5,0,0" Margin="-1,0,-1,0"
                            Visibility="{Binding EffectiveTitlebarVisibility}" MouseEnter="HoverZone_MouseEnter" MouseLeave="HoverZone_MouseLeave" MouseLeftButtonDown="DragWindow">
                    <Grid>
                        <TextBlock Foreground="White" FontWeight="Bold" VerticalAlignment="Center" Margin="10,1,10,1" Text="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type Window}}, Path=Title}"/>
                        <StackPanel Orientation="Horizontal"  HorizontalAlignment="Center">
                            <Button Margin="1" FontSize="7" Width="14" Height="14" Padding="0" Click="openspells" ToolTip="Open Spells/Trigger Window">
                                <Image Source="pack://application:,,,/Images/wizard.png"/>
                            </Button>
                            <Button Margin="1" FontSize="7" Width="14" Height="14" Padding="0" Click="opendps" ToolTip="Open DPS Window">
                                <Image Source="pack://application:,,,/Images/dps.png"/>
                            </Button>
                            <Button Margin="1" FontSize="7" Width="14" Height="14" Padding="0" Click="openmap" ToolTip="Open Map Window">
                                <Image Source="pack://application:,,,/Images/map.png"/>
                            </Button>
                            <Button Content="O" Margin="1" FontSize="7" Width="14" Height="14" Padding="0" Click="opensettings" ToolTip="Open Settings Window" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal"  HorizontalAlignment="Right">
                            <Button Content="L" Margin="1,1,10,1" FontSize="7" Width="10" Height="14" Padding="0" Click="Window_ToggleLock"/>
                            <Button Content="_" Margin="1" FontSize="7" Width="10" Height="14" Padding="0" Visibility="{Binding ShowTitlebar}" Click="MinimizeWindow"/>
                            <Button Content="&#xF04B;" Margin="1" FontSize="7" Width="10" Height="14" Padding="0" Visibility="{Binding ShowTitlebar}" Click="MaximizeWindow"/>
                            <Button Content="X" Margin="1,1,2,1" FontSize="7" Width="10" Height="14" Padding="0" Visibility="{Binding ShowTitlebar}" Click="CloseWindow" />
                        </StackPanel>
                    </Grid>
                </Border>
                <UserControl Grid.Row="1" Content="{Binding UserControl}"  VerticalAlignment="Stretch" HorizontalAlignment="Stretch"></UserControl>
            </Grid>
        </Grid>
    </Border>
</local:BaseSaveStateWindow>
